<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamrevelador.hack40_android.Activities.RewardsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rewards_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/orange_logo"
                />

            <TextView
                app:layout_constraintTop_toBottomOf="@id/rewards_image_view"
                app:layout_constraintBottom_toTopOf="@id/rewards_text"
                app:layout_constraintEnd_toEndOf="@id/rewards_text"
                app:layout_constraintStart_toStartOf="@id/rewards_text"
                android:text="Rs.256 worth of credits"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/rewards_text"
                android:layout_margin="16dp"
                android:text="Congratulations these credits can be redeemed at any light and sound at any Rajasthan Govt. monument."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
